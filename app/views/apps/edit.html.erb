<% @title = "App settings: #{@app.name}" %>
<div class="page-header page-header-integrated">
  <h1>App settings: <%= @app.name %></h1>
  <div class="back">
    <%= link_to "&laquo; Back to #{@app.name}".html_safe, @app %>
  </div>
</div>

<%= form_for(@app) do |f| %>
  <%= render partial: "form", locals: { f: f } %>

  <p class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </p>
<% end %>
